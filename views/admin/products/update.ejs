<%- include('../../shared/includes/head', {pageTitle: 'Update Product'}) %>
<link rel="stylesheet" href="/styles/form.css">
</head>
<body>
<%- include('../../shared/includes/header') %> 
    <main>
        <h1>Update Product</h1>
        <form action="/admin/products/<%= product.id %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data"> <!-- multipart is used to sent files to the server-->
           
            <p>
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= product.title %>">
            </p>
            <p>
                <label for="image">Image</label>
                <input type="file" name="image" id="image" accept="image/png, image/jpeg">
            </p>
            <p>
                <label for="summary">Summary</label>
                <input type="text" id="summary" name="summary" value="<%= product.summary %>">
            </p>
            <p>
                <label for="price">Price</label>
                <input type="number" name="price" id="price" min=10 step="5" <%= product.price %>>
            </p>
            <p>
                <label for="description">Description</label>
                <textarea name="description" id="description" cols="30" rows="10"><%= product.description %></textarea>
            </p>
            <p>
                <button type="reset" class="btn btn-alt">Reset</button>
                <button class="btn" type="submit">Submit</button>
            </p>
        </form>
    </main>

<%- include('../../shared/includes/footer') %> 