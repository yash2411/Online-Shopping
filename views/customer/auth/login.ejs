<%- include('../../shared/includes/head', {pageTitle: 'Login'}) %> 
<link rel="stylesheet" href="/styles/form.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
<%- include('../../shared/includes/header') %> 
    <main>
        <h1>Login</h1>
        <% if(inputData.errorMessage) { %>
            <section class="alert">
                <h2>Invalid Credentials</h2>
                <p><%= inputData.errorMessage %></p>
            </section>
        <% } %>
        <form action="/login" method="POST">
            <input type="hidden" value="<%= locals.csrfToken %>" name="_csrf">
            <p>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required value="<%= inputData.email %>">
            </p>

            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required minlength="6" value="<% inputData.password %>">
            </p>

            <hr>
            <button class="btn">Login</button>
            <p id="switch-form"><a href="/signup">Create Account</a></p>
        </form>
    </main>

<%- include('../../shared/includes/footer') %> 