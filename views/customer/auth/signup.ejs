<%- include('../../shared/includes/head', {pageTitle: 'Sign Up'}) %> 
<link rel="stylesheet" href="/styles/form.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
<%- include('../../shared/includes/header') %> 
    <main>
        <h1>Create New Account</h1>
        <% if(inputData.errorMessage) { %>
            <section class="alert">
                <h2>Invalid Input</h2>
                <p><%= inputData.errorMessage %></p>
            </section>
        <% } %>
        <form action="/signup" method="POST">
            <input type="hidden" value="<%= locals.csrfToken %>" name="_csrf">
            <p>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required value= "<%= inputData.email %>">
            </p>

            <p>
                <label for="confirm-email">Confirm Email</label>
                <input type="email" id="confirm-email" name="confirm-email" required value="<%= inputData.confirmEmail %>">
            </p>

            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required minlength="6" value="<%= inputData.password %>">
            </p>

            <hr>

            <p>
                <label for="fullname">Fullname</label>
                <input type="text" id="fullname" name="fullname" required value="<%= inputData.fullname %>">
            <p

            <p>
                <label for="street">Street</label>
                <input type="text" id="street" name="street" required value="<%= inputData.street %>">
            </p>

            <p>
                <label for="postal">Postal Code</label>
                <input type="text" id="postal" name="postal" required minlength="5" maxlength="5" value="<%= inputData.postal %>">
            </p>

            <p>
                <label for="city">City</label>
                <input type="text" id="city" name="city" required value="<%= inputData.city %>">
            </p>

            <button class="btn">Create Account</button>
            <p id="switch-form"><a href="/login">Login</a></p>
        </form>
    </main>

<%- include('../../shared/includes/footer') %> 